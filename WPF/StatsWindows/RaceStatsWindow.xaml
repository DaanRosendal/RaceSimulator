<Window x:Class="WPF.StatsWindows.RaceStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.StatsWindows"
        mc:Ignorable="d"
        Title="Race statistics"
        SizeToContent="WidthAndHeight">
    <Grid>
        <DockPanel>
            <ListBox x:Name="ListBoxStandings" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="200" BorderThickness="0"/>
            <ListBox x:Name="ListBoxDriverTimes" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="200" BorderThickness="0"/>
        </DockPanel>
    </Grid>
</Window>
